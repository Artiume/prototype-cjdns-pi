[Unit]
Description=Scuttlebot Web (SSB) Service
Wants=network.target
After=ssb.service

[Service]
User=_USER_
Group=_USER_
Type=simple
ExecStart=/usr/local/bin/ssb-web-broadcast-service.sh
ExecStop=/usr/bin/pkill -f ssb-web-broadcast-service.sh
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
