[Unit]
Description=Scuttlebot Web Broadcast Service
Wants=network.target
After=ssb.service

[Service]
User=__USER__
Group=__USER__
Type=simple
ExecStart=/usr/local/bin/ssb-web-broadcast-service.sh
ExecStop=/usr/bin/pkill -f ssb-web-broadcast-service.sh
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
