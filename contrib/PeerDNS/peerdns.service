[Unit]
Description=PeerDNS daemon
Wants=network.target
After=network.target

[Service]
User=__USER__
Group=__USER__
Environment="PATH=/opt/elixir/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
Environment="MIX_ENV=prod"
WorkingDirectory=/opt/PeerDNS
ExecStart=/opt/elixir/bin/mix run --no-halt
ExecStop=/bin/kill $MAINPID
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target